*filter

#Drop all inbound and forward
--policy INPUT DROP
--policy FORWARD DROP

#Allow HTTP
#-A INPUT -p tcp --dport 80 -j ACCEPT
#-A INPUT -p tcp --dport 80  -j ACCEPT

#Allow HTTPS
#-A INPUT -p tcp --dport 443 -j ACCEPT
#-A INPUT -p tcp --dport 443 -j ACCEPT

#Allow SSH
#-A INPUT -p tcp --dport 22 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
#-A INPUT -p tcp --dport 22 -m conntrack --ctstate NEW,ESTABLISHED -j ACCEPT
#-A INPUT -p tcp --dport 22 -s 10.10.10.10 -j ACCEPT
#-A INPUT -p tcp --dport 22 -s 10.10.10.10 -j ACCEPT
#-A INPUT -p tcp --dport 22 -s 10.10.10.10 -j ACCEPT
#-A INPUT -p tcp --dport 22 -s 10.10.10.10 -j ACCEPT

#Allow DNS
#-A INPUT -p tcp --dport 53 -s 10.10.10.10 -j ACCEPT
#-A INPUT -p udp --dport 53 -s 10.10.10.10 -j ACCEPT

#Allow IMAP
#-A INPUT -p tcp --dport 143 -s 10.10.10.10 -j ACCEPT
#-A INPUT -p tcp --dport 994 -s 10.10.10.10 -j ACCEPT

#Allow POP3
#-A INPUT -p tcp --dport 110 -s 10.10.10.10 -j ACCEPT
#-A INPUT -p tcp --dport 995 -s 10.10.10.10 -j ACCEPT

COMMIT
